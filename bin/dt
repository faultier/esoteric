#!/usr/bin/env ruby
# vim: filetype=ruby fileencoding=utf-8 :

require 'esoteric/dt'
require 'esoteric/runner'
require 'esoteric/easyvm'
$esoteric_bin_version = "#{Esoteric::VERSION::SUMMARY}, #{Esoteric::DT::VERSION::SUMMARY}"
source, options = Esoteric::Runner.parse_option
Esoteric::Runner.run(source, Esoteric::DT::Compiler, Esoteric::EasyVM, options)
